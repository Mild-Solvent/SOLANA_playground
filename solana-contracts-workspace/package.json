{
  "name": "solana-contracts-workspace",
  "version": "1.0.0",
  "description": "A comprehensive Solana smart contracts workspace",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "test": "npx ts-mocha -p ./tsconfig.json -t 1000000 tests/**/*.ts",
    "test:hello-world": "npx ts-mocha -p ./tsconfig.json -t 1000000 tests/hello-world.ts",
    "build": "anchor build",
    "deploy": "anchor deploy",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "typescript": "^5.7.3",
    "prettier": "^2.6.2"
  }
}
